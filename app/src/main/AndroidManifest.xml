<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.comictoon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/comiclogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComicToon">
        <activity
            android:name=".model.identity.RegisterActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Splash"/>
        <activity
            android:name=".model.identity.LoginActivity"
            android:exported="false"
            android:theme="@style/Splash"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.main.MainActivity"
            android:exported="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".views.main.Splash"
            android:exported="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".util.PushNotification" android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"></action>
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>